apiVersion: apps/v1
kind: Deployment
metadata:
  name: streaming
spec:
  replicas: 1
  selector:
    matchLabels:
      app: streaming
template:
    metadata:
      labels:
        app: streaming
    spec:
      containers:
      - name: streaming
        image: busybox
        command: ["sh","-c"]
        ports:
        - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: streaming-svc
spec:
  selector:
    app: streaming
  ports:
  - port: 80
    targetPort: 8080
